<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFC7BEBE">
        <StackPanel HorizontalAlignment="Left">
            <Button Height="54" Width="135" Content="Купить место" Click="Button_Click" Background="#FFEDE1E1"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right">
            <Button Height="54" Width="185" Content="Контроль места на парковке" Click="Button_Click1" Background="#FFECE0E0"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" Margin="0,214,0,145" Width="430">
            <TextBlock Width="373" FontSize="20" HorizontalAlignment="Center"><Run Text="Покупка и проверка парковочных мест"/></TextBlock>
        </StackPanel>
    </Grid>
</Window>
